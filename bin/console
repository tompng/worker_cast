#!/usr/bin/env ruby

require "bundler/setup"
require "worker_cast"

class Thread
  def self.new &block
    Thread.start do
      begin
        block.call
      rescue => e
        p e
        p e.backtrace
      end
    end
  end
end


SERVERS = {
  a: 'localhost:12345',
  b: 'localhost:23456',
  c: 'localhost:34567',
}

 WorkerCast.start(SERVERS, ARGV[0].to_sym) do |message, cb|
   Thread.new do
     sleep 1
     cb.call message.upcase
   end
   :async
 end

require "pry"
Pry.start
